<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TextField?>
<BorderPane fx:id="mainContainer" prefHeight="600.0" prefWidth="900.0" stylesheets="@styleMainWindow.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.swiper.memeswiper.MainController">

    <left>
        <VBox fx:id="sideBar" minWidth="0.0" prefWidth="250.0" styleClass="sidebar">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="60.0" styleClass="sidebar-header">
                    <Label prefHeight="35.0" prefWidth="200.0" styleClass="profile-label" text="Meme Swiper">
                        <font>
                            <Font size="24.0" />
                        </font>
                    </Label>
                </HBox>

                <VBox spacing="5.0" style="-fx-padding: 0 15 15 15;">
                    <Label text="Subreddit Source:" textFill="white">
                        <font><Font size="12.0"/></font>
                    </Label>

                    <HBox spacing="5.0" alignment="CENTER_LEFT">
                        <children>
                            <TextField fx:id="txtSubreddit" promptText="default (memes)"
                                       onAction="#handleChangeSubreddit"
                                       style="-fx-background-color: #333; -fx-text-fill: white; -fx-background-radius: 5;"
                                       HBox.hgrow="ALWAYS" />

                            <Button text="Go" onAction="#handleChangeSubreddit"
                                    style="-fx-background-color: #03045E; -fx-text-fill: white; -fx-font-weight: bold;-fx-cursor: hand; -fx-background-radius: 5;"/>
                        </children>
                    </HBox>
                </VBox>

                <javafx.scene.control.Separator style="-fx-opacity: 0.1; -fx-padding: 0 10 10 10;" />

                <Button fx:id="memeViewerButton" mnemonicParsing="false" onAction="#showMainViewer" prefHeight="36.0" prefWidth="265.0" styleClass="sidebar-button" text="MemeViewer" />
                <Button fx:id="galleryButton" mnemonicParsing="false" onAction="#showGallery" prefHeight="36.0" prefWidth="265.0" styleClass="sidebar-button" text="Gallery" />
            </children>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <children>
                <VBox alignment="CENTER" maxHeight="800.0" maxWidth="600.0" spacing="0.0">
                    <children>

                        <StackPane fx:id="memeViewer" styleClass="user-card-container" VBox.vgrow="ALWAYS">
                            <children>
                                <VBox fx:id="userCard1" alignment="CENTER" styleClass="user-card">
                                    <ImageView fx:id="card1" pickOnBounds="true" preserveRatio="true" />
                                </VBox>

                                <VBox fx:id="userCard2" alignment="CENTER" styleClass="user-card">
                                    <ImageView fx:id="card2" pickOnBounds="true" preserveRatio="true" />
                                </VBox>
                            </children>
                        </StackPane>

                        <HBox alignment="CENTER" spacing="30.0" styleClass="controls-container">
                            <children>
                                <Button fx:id="dislikeButton" styleClass="action-button" text="❌" />
                                <Button fx:id="starButton" styleClass="action-button" text="⬇" />
                                <Button fx:id="likeButton" styleClass="action-button" text="❤️" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <Button fx:id="btnToggle" onAction="#handleToggleSidebar" prefHeight="35.0" prefWidth="40.0" styleClass="hide-sidebar-button" text="☰" StackPane.alignment="TOP_LEFT">
                    <StackPane.margin>
                        <Insets left="15.0" top="15.0" />
                    </StackPane.margin>
                </Button>
            </children>
        </StackPane>
    </center>
</BorderPane>

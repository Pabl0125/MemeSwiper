<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.image.ImageView?>

<BorderPane fx:id="mainContainer" prefHeight="600.0" prefWidth="900.0" stylesheets="@styleMainWindow.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.swiper.memeswiper.HelloController">

    <left>
        <VBox fx:id="sideBar" minWidth="0.0" prefWidth="250.0" styleClass="sidebar">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="60.0" styleClass="sidebar-header">
                    <Label styleClass="profile-label" text="My Profile" />
                </HBox>
                <Button mnemonicParsing="false" prefHeight="36.0" prefWidth="265.0" text="Gallery" />
                <Button mnemonicParsing="false" prefHeight="36.0" prefWidth="265.0" text="Liked" />
                <Button mnemonicParsing="false" prefHeight="36.0" prefWidth="265.0" text="Info" />
            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentArea" styleClass="content-area">
            <children>
                <VBox alignment="CENTER" spacing="0.0" maxHeight="800.0" maxWidth="600.0">
                    <children>

                        <StackPane fx:id="memeViewer" VBox.vgrow="ALWAYS" styleClass="user-card-container">
                            <children>
                                <VBox fx:id="userCard1" alignment="CENTER" styleClass="user-card">
                                    <ImageView fx:id="card1" pickOnBounds="true" preserveRatio="true" />
                                </VBox>

                                <VBox fx:id="userCard2" alignment="CENTER" styleClass="user-card">
                                    <ImageView fx:id="card2" pickOnBounds="true" preserveRatio="true" />
                                </VBox>
                            </children>
                        </StackPane>

                        <HBox alignment="CENTER" spacing="30.0" styleClass="controls-container">
                            <children>
                                <Button fx:id="dislikeButton" styleClass="action-button" text="❌" />
                                <Button fx:id="starButton" styleClass="action-button" text="★" />
                                <Button fx:id="likeButton" styleClass="action-button" text="❤️" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <Button fx:id="btnToggle" onAction="#handleToggleSidebar" text="☰ Menu" StackPane.alignment="TOP_LEFT">
                    <StackPane.margin>
                        <Insets left="15.0" top="15.0" />
                    </StackPane.margin>
                </Button>
            </children>
        </StackPane>
    </center>
</BorderPane>
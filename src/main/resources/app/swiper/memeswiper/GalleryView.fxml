<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.TilePane?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.swiper.memeswiper.GalleryController">
    <content>
        <TilePane fx:id="galleryGrid"
                  prefTileWidth="320"
                  prefTileHeight="320"
                  hgap="20"
                  vgap="20"
                  alignment="CENTER"
                  style="-fx-padding: 20; -fx-background-color: #f0f2f5;">
        </TilePane>
    </content>
</ScrollPane>
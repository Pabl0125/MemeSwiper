<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="800.0" maxWidth="600.0" spacing="0.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>

        <StackPane fx:id="memeViewer" styleClass="user-card-container" VBox.vgrow="ALWAYS">
            <children>
                <VBox fx:id="userCard1" alignment="CENTER" styleClass="user-card">
                    <ImageView fx:id="card1" pickOnBounds="true" preserveRatio="true" />
                </VBox>

                <VBox fx:id="userCard2" alignment="CENTER" styleClass="user-card">
                    <ImageView fx:id="card2" pickOnBounds="true" preserveRatio="true" />
                </VBox>
            </children>
        </StackPane>

        <HBox alignment="CENTER" spacing="30.0" styleClass="controls-container">
            <children>
                <Button fx:id="dislikeButton" styleClass="action-button" text="❌" />
                <Button fx:id="starButton" styleClass="action-button" text="★" />
                <Button fx:id="likeButton" styleClass="action-button" text="❤️" />
            </children>
        </HBox>

    </children>
</VBox>